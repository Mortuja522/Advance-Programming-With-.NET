@model IEnumerable<WebApplication1.Models.Booking>

@{
    ViewBag.Title = "BookingList";
}
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li><a href="/admin/AdminDashboard">Dashboard</a></li>
                <li><a href="/admin/userList">User List</a></li>
                <li><a href="/admin/houseList">House List</a></li>
                <li><a href="/admin/bookingList">Bookig Flat List</a></li>
                <li><a href="/admin/editProfile">Edit Profile</a></li>
                <li><a href="/admin/changePassword">Change Password</a></li>
                <li><a href="/logout/Logout">Logout</a></li>
            </ul>
        </div>
    </div>
</div>
<h2>BookingList</h2>

<table class="table table-bordered">
    <tr>
        <th>
            Booking Id
        </th>
        <th>
            Flat Id
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            Status
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.BookigId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FlatId)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Amount)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Status)
    </td>
    <td>
        <form action="/admin/updateStatus?id=@item.BookigId" method="post">
            <input type="submit" value="Confirm Booking" class="btn btn-success"/>
        </form>
    </td>
    
</tr>
}

</table>
